<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp" />

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal|center_vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/GridLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:context=".GridLayoutActivity">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/valenceRadioGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onRadioButtonClicked"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radiobutton_selector_smiley_happiest"
                        android:onClick="onRadioButtonClicked"
                        android:tag="5"></RadioButton>

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radiobutton_selector_smiley_littlehappy"
                        android:onClick="onRadioButtonClicked"
                        android:tag="4"></RadioButton>

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radiobutton_selector_smiley_neutral"
                        android:onClick="onRadioButtonClicked"
                        android:tag="3"></RadioButton>

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radiobutton_selector_smiley_littlesad"
                        android:onClick="onRadioButtonClicked"
                        android:tag="2"></RadioButton>

                    <RadioButton
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@drawable/radiobutton_selector_smiley_verysad"
                        android:onClick="onRadioButtonClicked"
                        android:tag="1"></RadioButton>
                </RadioGroup>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/intensityRadioGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="onRadioButtonClicked"
                    android:orientation="horizontal">


                    <RadioButton
                        android:id="@+id/intensity_verysmall"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:alpha="0.6"
                        android:button="@drawable/radiobutton_selector_smiley_lowestintensity"
                        android:gravity="bottom"
                        android:onClick="onRadioButtonClicked"
                        android:tag="1"></RadioButton>

                    <RadioButton
                        android:id="@+id/intensity_small"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="30"
                        android:alpha="0.7"
                        android:button="@drawable/radiobutton_selector_smiley_lowintensity"
                        android:gravity="bottom"
                        android:onClick="onRadioButtonClicked"
                        android:tag="2"></RadioButton>

                    <RadioButton
                        android:id="@+id/intensity_medium"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="35"
                        android:alpha="0.8"
                        android:button="@drawable/radiobutton_selector_smiley_mediumintensity"
                        android:gravity="bottom"
                        android:onClick="onRadioButtonClicked"
                        android:tag="3"></RadioButton>

                    <RadioButton
                        android:id="@+id/intensity_large"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:alpha="0.9"
                        android:button="@drawable/radiobutton_selector_smiley_highintensity"
                        android:gravity="bottom"
                        android:onClick="onRadioButtonClicked"
                        android:tag="4"></RadioButton>

                    <RadioButton
                        android:id="@+id/intensity_verylarge"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="40"
                        android:button="@drawable/radiobutton_selector_smiley_highestintensity"
                        android:gravity="bottom"
                        android:onClick="onRadioButtonClicked"
                        android:tag="5"></RadioButton>

                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/surfaceViewContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center_horizontal">

                <SurfaceView
                    android:id="@+id/cameraId"
                    android:layout_width="50px"
                    android:layout_height="50px" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <LinearLayout

                android:id="@+id/layoutUploadProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <ProgressBar
                    android:id="@+id/uploadProgressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="5dp"
                    android:indeterminate="false" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Uploading Data Progress" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/footerButtonContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <Button
                    android:id="@+id/nextQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:onClick="loadNextQuestion"
                    android:text="Next" />

                <Button
                    android:id="@+id/lastQuestionSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:onClick="SaveData"
                    android:text="Save"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>