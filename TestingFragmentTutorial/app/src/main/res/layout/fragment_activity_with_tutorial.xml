<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ActivityWithTutorialFragmentFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/intensityRadioGroup"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="onRadioButtonClicked"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/intensity_verysmall"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:layout_weight="30"
                android:alpha="0.6"
                android:button="@drawable/radiobutton_selector_smiley_lowestintensity"
                android:onClick="onRadioButtonClicked"
                android:tag="1">
            </RadioButton>

            <RadioButton
                android:id="@+id/intensity_small"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:layout_weight="30"
                android:alpha="0.7"
                android:button="@drawable/radiobutton_selector_smiley_lowintensity"
                android:onClick="onRadioButtonClicked"
                android:tag="2"></RadioButton>

            <RadioButton
                android:id="@+id/intensity_medium"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:layout_weight="35"
                android:alpha="0.8"
                android:button="@drawable/radiobutton_selector_smiley_mediumintensity"
                android:onClick="onRadioButtonClicked"
                android:tag="3"></RadioButton>

            <RadioButton
                android:id="@+id/intensity_large"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:layout_weight="40"
                android:alpha="0.9"
                android:button="@drawable/radiobutton_selector_smiley_highintensity"
                android:onClick="onRadioButtonClicked"
                android:tag="4"></RadioButton>

            <RadioButton
                android:id="@+id/intensity_verylarge"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:gravity="bottom"
                android:button="@drawable/radiobutton_selector_smiley_highestintensity"
                android:onClick="onRadioButtonClicked"
                android:tag="5"></RadioButton>

        </RadioGroup>

    </LinearLayout>

</RelativeLayout>
